<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Professor Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f8f9fa;
    }

    .dashboard-container {
      margin-top: 30px;
    }

    .card-header {
      background-color: #dc3545; /* Red theme */
      color: white;
      font-weight: 600;
    }

    table th, table td {
      text-align: center;
      vertical-align: middle;
    }

    .present {
      background-color: #28a745; /* green */
      color: white;
      font-weight: 600;
    }

    .absent {
      background-color: #ffc107; /* yellow */
      font-weight: 600;
    }

    .stats {
      margin-top: 15px;
      font-weight: 600;
    }

    .btn-logout {
      margin-top: 20px;
    }

    @media (max-width: 992px) {
      table {
        font-size: 12px;
      }
    }
  </style>
</head>
<body>
  <div class="container dashboard-container">
    <div class="card">
      <div class="card-header">
        Welcome, <%= professor.name %> üë®‚Äçüè´ &nbsp; | &nbsp; Subject: <%= professor.subject %>
      </div>
      <div class="card-body">
        <% if (students.length > 0) { %>
          <table class="table table-bordered table-striped">
            <thead>
              <tr>
                <th>Student Name</th>
                <th>Roll No</th>
                <th>Email</th>
                <% allLectures.forEach(lec => { %>
                  <th><%= lec.split("")[0] %> (Lec <%= lec.split("")[1] %>)</th>
                <% }) %>
                <th>Attended / Total</th>
              </tr>
            </thead>
            <tbody>
              <% students.forEach(student => { %>
                <tr>
                  <td><%= student.name %></td>
                  <td><%= student.rollno || '-' %></td>
                  <td><%= student.email || '-' %></td>
                  <% allLectures.forEach(lec => { 
                    const status = attendanceMap[student.name][lec];
                  %>
                    <td class="<%= status === 'Present' ? 'present' : 'absent' %>">
                      <%= status === 'Present' ? '‚úî' : '‚úñ' %>
                    </td>
                  <% }) %>
                  <td class="stats">
                    <%= student.attendedLectures %> / <%= student.totalLectures %>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        <% } else { %>
          <p>No students enrolled yet.</p>
        <% } %>

        <a href="/professors/logout" class="btn btn-danger btn-logout">
          <i class="fas fa-sign-out-alt"></i> Logout
        </a>
      </div>
    </div>
  </div>
</body>
</html>